<?php
  include "connection.php";
  $sql = "select * from elements";
  $elements = mysqli_query($conn, $sql);
  while ($element = mysqli_fetch_assoc($elements)) {
    if ($element["iconType"] == "text") {
      $icon = sprintf(
        "<h1 onclick = 'clicked(this);'
            class = 'icon'>
          %s
        </h1>",
        $element["icon"]
      );
    }

    if (is_null($element["x"]) || is_null($element["y"])) {
      $element["x"] = "80%";
      $element["y"] = "0px";
    }
    else {
      $element["x"] .= "px";
      $element["y"] .= "px";
    }

    printf(
      "<div style =
            'position: absolute;
            left: %s;
            top: %s;'
          data-id = %d
          data-url = %s>
        %s
      </div>",
      $element["x"],
      $element["y"],
      $element["id"],
      $element["url"],
      $icon
    );
  }
?>
